\usepackage{tcolorbox}

\tcbuselibrary{listings}
\tcbuselibrary{skins}

\lstdefinestyle{java_style}
{literate=
	{>=}{{$\geq$}}2
	{<=}{{$\leq$}}2
}
\newtcblisting{javabox}[1][]{%
listing only,
listing options={language=Java, style=java_style, tabsize=2,escapeinside={(*@}{@*)}},
enhanced,
title=Java,
arc=1mm,
attach boxed title to top right = {xshift=-.5mm,yshift=-5.18mm},
boxed title style={size=small,arc=1mm, boxrule=0pt, sharp corners=downhill},
#1
}
\def\javainline{\lstinline[language=Java, style=java_style]}

